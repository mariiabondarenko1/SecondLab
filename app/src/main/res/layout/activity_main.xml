<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:id="@+id/image">


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:layout_editor_absoluteY="16dp"
            tools:layout_editor_absoluteX="-30dp">


        <ImageView
                android:layout_width="121dp"
                android:layout_height="144dp"
                app:srcCompat="@drawable/cat"
                android:id="@+id/imageView"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="108dp"
                tools:ignore="ContentDescription" android:layout_marginTop="84dp"/>
        <TextView
                android:layout_width="194dp"
                android:layout_height="42dp"
                android:id="@+id/title" android:layout_marginTop="32dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/imageView" app:layout_constraintVertical_bias="0.0"
                android:text="Мой питомец" android:textSize="30sp" android:textColor="#682A2A"
                android:layout_marginStart="80dp" app:layout_constraintStart_toStartOf="parent"/>
        <Button
                android:text="Ввести данные"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonAddingPet" android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="108dp"/>
        <TextView
                android:text="Ищешь мемы про котиков?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/buttonAddingPet" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="80dp"/>
        <TextView
                android:text="Пиши ниже, что желаешь найти"
                android:layout_width="220dp"
                android:layout_height="21dp"
                android:id="@+id/textView2"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="68dp"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/textForSearching"
                android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/textView2"
                android:layout_marginStart="56dp" app:layout_constraintStart_toStartOf="parent"/>
        <Button
                android:text="поиск"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonSearchingGoogle" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/textForSearching" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="124dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>